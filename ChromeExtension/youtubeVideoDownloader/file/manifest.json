{
	"manifest_version": 2,
	"name": "uDownloader" ,
	"description": "Donwload video from youtube",
	"version": "1.0",
	"browser_action": {
		"default_icon": "youtube.png",
		"default_title": "Простое расширение"
	},
	"icons": {
		"16": "youtube.png",
		"48": "youtube.png",
		"128": "youtube.png"
	},
	//что бы мы могли работать с некоторыми фунециями вкладки
	"permissions":[
		"tabs"
	],
	//тут мы будем описывать обработчик нажатия на кнопку
	"background":{
		"scripts" : ["alert.js"]
	}


}