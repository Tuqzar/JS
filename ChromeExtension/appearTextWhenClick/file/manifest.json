{
	"manifest_version": 2,
	"name": "alert" ,
	"description": "alert plugin whitch show some text in popup window",
	"version": "1.0",
	"browser_action": {
		"default_icon": "calc.png",
		"default_title": "Простое расширение"
	},
	"icons": {
		"16": "calc.png",
		"48": "calc.png",
		"128": "calc.png"
	},
	//что бы мы могли работать с некоторыми фунециями вкладки
	"permissions":[
		"tabs"
	],
	//тут мы будем описывать обработчик нажатия на кнопку
	"background":{
		"scripts" : ["alert.js"]
	}


}